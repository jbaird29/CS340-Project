        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@forevolve/bootstrap-dark@1.0.0/dist/css/bootstrap-dark.min.css" />

        <title>Customer Contacts</title>
    </head>
    <body>
        <nav role="navigation" class="navbar navbar-expand-lg bg-dark">
            <div class="collapse navbar-collapse justify-content-center" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-item nav-link" href="/">Home</a>
                    <a class="nav-item nav-link" href="/jobs">Jobs</a>
                    <a class="nav-item nav-link" href="/job-workers">Job Workers</a>
                    <a class="nav-item nav-link" href="/workers">Workers</a>
                    <a class="nav-item nav-link" href="/houses">Houses</a>
                    <a class="nav-item nav-link" href="/lawnmowers">Lawnmowers</a>
                    <a class="nav-item nav-link" href="/sales-managers">Sales Managers</a>
                    <a class="nav-item nav-link active" href="/customer-contacts">Customer Contacts</a>
                </div>
            </div>
        </nav>

        <main role="main" class="container">
            <h1 class="mt-4 text-center">Customer Contacts Table</h1>

            <h3 class="mt-4">Add a New Contact</h3>
            <form>
                <div class="row">
                    <div class="col">
                        <label for="first_name">First Name</label>
                        <input type="text" class="form-control" id="first_name" />
                    </div>
                    <div class="col">
                        <label for="last_name">Last Name</label>
                        <input type="text" class="form-control" id="last_name" />
                    </div>
                    <div class="col">
                        <label for="date">Email</label>
                        <input type="email" class="form-control" id="email" />
                    </div>
                    <div class="col">
                        <label for="phone_number">Phone Number</label>
                        <input
                            type="tel"
                            class="form-control"
                            id="phone_number"
                            pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"
                            placeholder="Format: 999-999-999"
                        />
                    </div>
                    <div class="col">
                        <label for="lawnmower_id">House ID</label>
                        <select class="form-control" id="lawnmower_id">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                        </select>
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-light mt-2">Submit</button>
            </form>

            <br />

            <h3 class="mt-4">Search Contacts by Name</h3>

            <form>
                <div class="row">
                    <div class="col">
                        <label for="first_name">First Name</label>
                        <input type="text" class="form-control" id="first_name" />
                    </div>
                    <div class="col">
                        <label for="last_name">Last Name</label>
                        <input type="text" class="form-control" id="last_name" />
                    </div>
                </div>

                <button type="submit" class="btn btn-outline-light mt-2">Submit</button>
            </form>

            <br />

            <h3 class="mt-5">Browse Contacts</h3>

            <table class="table table-striped">
                <thead>
                    <tr>
                        {% for key in table_data[0].keys() %}
                        <th scope="col">{{ key.replace("_", " ") }}</th>
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                    {% for row in table_data %}
                    <tr>
                        {% for key in row.keys() %}
                        <td>{{row[key]}}</td>
                        {% endfor %}
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </main>
    </body>
</html>
