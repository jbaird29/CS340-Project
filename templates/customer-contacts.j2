{% extends "base.j2" %}
{% block main%}
    <h1 class="mt-4 text-center">Customer Contacts Table</h1>
    <h3 class="mt-4">Add a New Contact</h3>
    <form>
        <div class="row">
            <div class="col">
                <label for="first_name">First Name</label>
                <input type="text" class="form-control" id="first_name" />
            </div>
            <div class="col">
                <label for="last_name">Last Name</label>
                <input type="text" class="form-control" id="last_name" />
            </div>
            <div class="col">
                <label for="date">Email</label>
                <input type="email" class="form-control" id="email" />
            </div>
            <div class="col">
                <label for="phone_number">Phone Number</label>
                <input
                    type="tel"
                    class="form-control"
                    id="phone_number"
                    pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"
                    placeholder="Format: 999-999-999"
                />
            </div>
            <div class="col">
                <label for="lawnmower_id">House ID</label>
                <select class="form-control" id="lawnmower_id">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-outline-light mt-2">Submit</button>
    </form>

    <br />

    <h3 class="mt-4">Search Contacts by Name</h3>
    <form action="/customer-contacts" method="GET">
        <div class="row">
            <div class="col">
                <label for="first_name">First Name</label>
                <input type="text" class="form-control" name="first_name" id="first_name" />
            </div>
            <div class="col">
                <label for="last_name">Last Name</label>
                <input type="text" class="form-control" name="last_name" id="last_name" />
            </div>
        </div>

        <button type="submit" class="btn btn-outline-light mt-2">Submit</button>
    </form>
{% endblock %}